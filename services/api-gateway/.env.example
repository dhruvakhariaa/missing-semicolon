# ===========================================
# SERVICE DELIVERY PLATFORM - API GATEWAY
# Environment Configuration
# ===========================================

# Server
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/sdp_registry

# Redis (for sessions/rate limiting)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (32-character hex key for AES-256-GCM)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Email / SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=your-email@gmail.com

# Email Mode
# Set to 'true' to log emails to console instead of sending
# Set to 'false' for production to send real emails
EMAIL_TEST_MODE=true

# ===========================================
# SECURITY ALERTS (IMPORTANT!)
# ===========================================
# Set to 'true' to enable email alerts when attacks are blocked
# Set to 'false' to disable (recommended for local development)
# 
# FOR PRODUCTION: Set this to 'true'
SECURITY_ALERTS_ENABLED=false

# CORS
CORS_ORIGIN=http://localhost:3000

# RabbitMQ (optional)
RABBITMQ_URL=amqp://localhost:5672

# ===========================================
# PRODUCTION SETTINGS CHECKLIST
# ===========================================
# Before deploying to production, update these:
# 
# 1. NODE_ENV=production
# 2. MONGODB_URI=your-production-mongodb-uri
# 3. JWT_SECRET=strong-random-32-char-secret
# 4. JWT_REFRESH_SECRET=another-strong-random-secret
# 5. ENCRYPTION_KEY=random-32-hex-chars
# 6. SMTP settings for your email provider
# 7. EMAIL_TEST_MODE=false
# 8. SECURITY_ALERTS_ENABLED=true
# 9. CORS_ORIGIN=https://your-production-domain.com
